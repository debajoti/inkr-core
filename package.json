{
  "name": "inkr",
  "version": "0.1.0",
  "description": "CLI colorizing tool for styled terminal output",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "NODE_ENV=test mocha -r ts-node/register/transpile-only -p tsconfig.test.json --no-timeout --reporter-options maxDiffSize=0,showTestDuration=true,testListEmit=true \"tests/**/*.ts\"",
    "dev": "nodemon src/index.ts",
    "start": "node src/index.ts",
    "prepublishOnly": "npm run build",
    "build": "npx tsc"
  },
  "files": [
    "dist/**/*"
  ],
  "author": "joti.deb",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/node": "^24.0.10",
    "chai": "^5.2.1",
    "mocha": "^11.7.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}