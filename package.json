{
  "name": "inkr-core",
  "version": "0.1.4",
  "description": "CLI colorizing tool for styled terminal output",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "NODE_ENV=test mocha -r ts-node/register/transpile-only -p tsconfig.test.json --no-timeout --reporter-options maxDiffSize=0,showTestDuration=true,testListEmit=true \"tests/**/*.ts\"",
    "dev": "nodemon src/index.ts",
    "start": "node src/index.ts",
    "example": "nodemon _example_/javascript/usecases.ts",
    "prepublishOnly": "npm run build",
    "build": "npx tsc"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "terminal",
    "console",
    "cli",
    "color",
    "colour",
    "style",
    "styling",
    "ansi",
    "chalk",
    "colors",
    "text-formatting",
    "terminal-colors",
    "command-line",
    "output",
    "formatting",
    "rgb",
    "truecolor",
    "browser-console",
    "cross-platform",
    "typescript",
    "nodejs",
    "developer-tools",
    "logging",
    "pretty-print",
    "colorize",
    "highlight",
    "theme",
    "inkr"
  ],
  "author": "joti.deb",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/node": "^24.0.10",
    "chai": "^5.2.1",
    "mocha": "^11.7.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=16"
  }
}